                android:layout_alignParentBottom="true"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/note_g"
                android:background="@drawable/button" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/note_a"
